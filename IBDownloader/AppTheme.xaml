            <ComboBoxItem Content="Фиолетовый"/>
            <ComboBoxItem Content="Розовый"/>
            <ComboBoxItem Content="Пурпурно-красный"/>
            <ComboBoxItem Content="Малиновый"/>
            <ComboBoxItem Content="Янтарь"/>
            <ComboBoxItem Content="Желтый"/>
            <ComboBoxItem Content="Коричневый"/>
            <ComboBoxItem Content="Оливковый"/>
            <ComboBoxItem Content="Стали"/>
            <ComboBoxItem Content="Розовато-лиловый"/>
            <ComboBoxItem Content="Темно-серый"/>
            <ComboBoxItem Content="Сиена"/>
        </ComboBox>
    </Grid>
</Controls:MetroWindow>